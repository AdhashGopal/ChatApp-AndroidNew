<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/R1_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/v0">

        <TextView
            android:id="@+id/invitefriends"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:paddingTop="15dp"
            android:text="Invite a friend"
            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/invitefriends"
            android:layout_centerInParent="true"
            android:background="#E4E4E4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/R2_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/R1_more">

        <TextView
            android:id="@+id/contacts"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:paddingTop="15dp"
            android:text="Contacts"

            android:textColor="#000000"
            android:textSize="15sp" />


        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/contacts"
            android:layout_centerInParent="true"
            android:background="#E4E4E4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/R3_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/R2_more">

        <TextView
            android:id="@+id/Refresh"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:paddingTop="15dp"
            android:text="Refresh"

            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/Refresh"
            android:layout_centerInParent="true"
            android:background="#E4E4E4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/R4_more"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/R3_more">

        <TextView
            android:id="@+id/Aboutandhelp"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:paddingTop="15dp"
            android:text="About and help"
            android:textColor="#000000"
            android:textSize="15sp" />

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/Aboutandhelp"
            android:layout_centerInParent="true"
            android:background="#E4E4E4" />
    </RelativeLayout>


</RelativeLayout>